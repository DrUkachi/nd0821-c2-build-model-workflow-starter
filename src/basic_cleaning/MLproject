name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      tmp_directory:
        description: This is the directory used for the temporary storage of the dataset
        type: string

      input_artifact:
        description: This is the name of the input artifact
        type: string

      output_artifact:
        description: This is the name of the output artifact
        type: string

      output_type:
        description: This defines the data type of the artifact
        type: string

      output_description:
        description: This gives a brief description of the output
        type: string

      min_price:
        description: The value of the minimum price
        type: int

      max_price:
        description: The value of the maximum price
        type: int


    command: >-
        python run.py  --tmp_directory {tmp_directory} --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price}
